{
  "name": "support",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "biome format --write .",
    "format:check": "biome check .",
    "lint:oxlint": "oxlint .",
    "test": "turbo run test",
    "test:all": "vitest --run",
    "check-types": "turbo run check-types",
    "ci:version": "changeset version",
    "ci:publish": "changeset publish",
    "db:generate": "drizzle-kit generate --config=packages/database/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=packages/database/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=packages/database/drizzle.config.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@changesets/cli": "^2.29.8",
    "oxlint": "^0.15.0",
    "prettier": "^3.7.4",
    "turbo": "^2.7.5",
    "turbo-ignore": "^2.7.5",
    "typescript": "5.9.2",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
